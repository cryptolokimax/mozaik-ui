    "build:umd": "cross-env BABEL_ENV=rollup NODE_ENV=development rollup -c -o dist/mozaik-ui.js",
    "build:umd:min": "cross-env BABEL_ENV=rollup NODE_ENV=production rollup -c -o dist/mozaik-ui.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min"
