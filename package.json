{
  "name": "@mozaik/ui",
  "description": "Mozaïk UI",
  "version": "2.0.0-alpha.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/plouc/mozaik"
  },
  "author": {
